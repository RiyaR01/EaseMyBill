<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center" style="margin: 40px 0;">New Customer</h1>
        <div class="col-6 offset-3">
            <form action="/customers/bill" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Customer Name</label>
                    <input class="form-control" type="text" id="title" name="customer[custName]" required>
                    <div class="valid-feedback" style="color: rgb(145, 119, 50);">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Phone Number</label>
                    <input class="form-control" type="tel" id="location" name="customer[custPhone]" required>
                    <div class="valid-feedback" style="color: rgb(145, 119, 50);">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email Id</label>
                    <input class="form-control" type="email" id="email" name="customer[custMail]">
                </div>
                <div class="mb-3">
                    <button class="btn btn-outline-dark" style="border-radius: 12px;font-size: 15px;" >Make Bill</button>
                </div>
            </form>
        </div>
    </div>