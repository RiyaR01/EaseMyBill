<% layout('layouts/boilerplate')%>

<div class="card" style="margin-top: 30px; border-radius: 30px;">
    <div class="container">
        <div class="row p-4 mb-3">
            <div class="col-md-6 d-flex flex-column justify-content-between" style="margin: 20px 0;">
                <div style="margin-left:30px; margin-bottom: 10px;">
                    <h5 class="card-title my-3" style="text-transform: capitalize;"><b>Customer Name:</b> <%= customer.custName%></h5>
                    <h5 class="card-title my-3"><b>Phone Number:</b> <%= customer.custPhone%></h5>
                    <% if (customer.custMail != '') { %>
                        <h5 class="card-title my-3"><b>Email Id: </b><%= customer.custMail %></h5>
                    <% } %> 
                </div>
                <div style="margin-left:30px;">
                    <a class="btn btn-outline-dark" style="border-radius: 12px; font-size: 15px; margin-right: 10px;" href="/customers/<%=customer._id%>/edit">Edit</a>
                    <form class="d-inline" action="/customers/<%=customer._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-outline-danger" style="border-radius: 12px; font-size: 15px; margin-right: 10px;">Delete</button>
                    </form>
                    <a class="btn btn-outline-success" style="border-radius: 12px;font-size: 15px;" href="/customers/bill/<%=customer._id%>/newBill">Add Bill</a>
                </div>
            </div>
            <div class="col-md-6 d-flex flex-column">
                <% for (let bill of customer.orders) { %>
                    <div class="card-body d-flex" style="width: 100%; justify-content: space-between; align-items: center;">
                        <div>
                            <h5 class="card-title mb-3"><b>Order Number:</b> <%= bill._id %></h5>
                            <h5 class="card-title"><b>Amount:</b> â‚¹ <%= bill.billPrice %></h5>
                        </div>
                        <a class="btn btn-outline-dark fas fa-chevron-right"
                        style="border-radius: 12px;"
                        href="/bills/<%= bill._id%>"></a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
<br></br>