<% layout('layouts/boilerplate')%>

<h1 style="text-align: center; margin-bottom: 20px;">All Orders</h1>
<div style="text-align: right;">
    <a class="btn btn-outline-dark" style="border-radius: 12px; font-size: 15px;"  href="customers/bill/addCustomer">Add Bill</a>
    <br>
</div>
<% for (let bill of bills) { %>
    <div class="card shadow" style="margin-top: 30px; border-radius: 30px;">
        <div class="container">
            <div class="row p-4 d-flex">
                <div class="col-md-6 d-flex flex-column" style="margin: 40px 0">
                    <div style="margin-left:30px;">
                        <h5 class="card-title my-3" style="text-transform: capitalize;"><b>Customer Name:</b> <%= bill.customer.custName%></h5>
                        <h5 class="card-title my-3"><b>Phone Number:</b> <%= bill.customer.custPhone%></h5>
                        <% if (bill.customer.custMail != '') { %> 
                            <h5 class="card-title my-3"><b>Email Id: </b><%= bill.customer.custMail %></h5>
                        <% } %> 
                    </div>
                </div>
                <div class="col-md-6 d-flex flex-column">
                    <div class="card-body d-flex" style="width: 100%; justify-content: space-between; align-items: center;">
                        <div>
                            <h5 class="card-title my-3"><b>Order Number:</b> <%= bill._id %></h5>
                            <h5 class="card-title my-3"><b>Amount:</b> â‚¹ <%= bill.billPrice %></h5>
                        </div>
                        <a class="btn btn-outline-dark fas fa-chevron-right"
                        style="border-radius: 12px;"
                        href="/bills/<%= bill._id%>"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% }%>
<br>